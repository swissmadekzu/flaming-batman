%tr
  %td= ticket.id
  %td
    - if ticket.stupid?
      %i.icon-beer
  %td= ticket.author.try(:name)
  %td= ticket.created_at
  %td= t("categories.#{ticket.category.try(:title)}")
  %td= ticket.title
  %td= t("statuses.#{ticket.status.try(:title)}")
  %td{style: "color: ##{ticket.emergency.try(:color)}"}= t("emergencies.#{ticket.emergency.try(:title)}")
  %td
    = link_to ticket_path(ticket) do
      %i.icon-eye-open