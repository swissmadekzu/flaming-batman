.breadcrumbs
  %ol.breadcrumb
    %li.active
      = t("tickets.my_tickets")

.submenu
  %h1= t("tickets.tickets")
  
.main
  .row
    .col-md-12
      %section.tile
        .tile-header
          %h1= t("tickets.title_#{params[:filter]}")
        .tile-body
          %table.table.table-bordered.table-striped
            %thead
              %tr
                %th.sort-numeric= t("tickets.fields.ticket_number")
                %th
                %th.col-md-2.sort-alpha= t("tickets.fields.author")
                %th= t("tickets.fields.date")
                %th.sort-alpha= t("tickets.fields.category")
                %th.col-md-4.sort-alpha= t("tickets.fields.title")
                %th.col-md-1.sort-alpha= t("tickets.fields.status")
                %th.col-md-1.sort-alpha= t("tickets.fields.emergency")
            %tbody
              = render partial: "ticket_tech_line", collection: @tickets, as: :ticket  