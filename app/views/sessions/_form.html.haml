= form_for :session, :url => session_path, html: {class: "ink-form"} do |form|
  .control-group.required
    = form.label :email, t("users.fields.email")
    .control
      = form.text_field :email, :type => 'email'


  .control-group.required
    = form.label :password, t("users.fields.password")
    .control
      = form.password_field :password

  %p
    = form.submit t("users.sign_in"), class: "ink-button green"

  %p
    = link_to t('users.forgot_password'), new_password_path